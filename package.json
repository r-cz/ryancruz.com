{
  "name": "ryancruz-com",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "dev:local": "wrangler dev --local",
    "start": "bun run dev",
    "build": "bun run typecheck && bun run lint && bun run build:site && bun run build:worker",
    "build:site": "bun run build.ts --minify",
    "build:worker": "bun build src/worker.ts --outdir dist --target browser",
    "build:watch": "bun run build.ts --watch",
    "preview": "cd dist && python3 -m http.server 8080",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "test": "bun test",
    "deploy": "bun run build && wrangler deploy",
    "clean": "rm -rf node_modules dist .vite bun.lock && echo 'ðŸ§¹ Cleaned: node_modules, dist, .vite, bun.lock' && echo 'ðŸ“¦ Run: bun install'"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250809.0",
    "@eslint/js": "^9.33.0",
    "@tailwindcss/cli": "^4.1.11",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.2.1",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.33.0",
    "jsdom": "^25.0.1",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.9.2",
    "wrangler": "^4.28.1"
  }
}
