{
  "name": "ryancruz-com",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "bun run typecheck && bun run lint && vite build && bun run build:worker",
    "build:worker": "bun build src/worker.ts --outdir dist --target browser",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "worker:dev": "wrangler dev",
    "worker:deploy": "wrangler deploy",
    "clean": "rm -rf node_modules dist .vite bun.lock && echo 'ðŸ§¹ Cleaned: node_modules, dist, .vite, bun.lock' && echo 'ðŸ“¦ Run: bun install'"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@tailwindcss/vite": "^4.1.11",
    "@types/node": "^24.2.1",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.33.0",
    "jsdom": "^25.0.1",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.9.2",
    "vite": "^6.0.5",
    "wrangler": "^4.28.1"
  }
