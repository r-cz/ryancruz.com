{
  "name": "ryancruz-com",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run build:site && bun run build:watch & wrangler dev",
    "build": "bun run typecheck && bun run lint && bun run svgo:all && bun run build:site",
    "build:site": "bun run build.ts --minify",
    "build:watch": "bun run build.ts --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "test": "bun test",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "svgo": "svgo ./public/kdal.svg --multipass -o ./public/kdal.svg",
    "svgo:all": "svgo ./public/**/*.svg --multipass --config=./svgo.config.js",
    "deploy": "bun run build && wrangler deploy",
    "clean": "rm -rf node_modules dist .vite bun.lock && echo 'ðŸ§¹ Cleaned: node_modules, dist, .vite, bun.lock' && echo 'ðŸ“¦ Run: bun install'"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250913.0",
    "@eslint/js": "^9.35.0",
    "@tailwindcss/cli": "^4.1.13",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.5.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^9.35.0",
    "jsdom": "^27.0.0",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2",
    "wrangler": "^4.37.0",
    "prettier": "^3.6.2",
    "svgo": "^4.0.0",
    "@fontsource-variable/inter": "^5.2.7"
  },
  "optionalDependencies": {
    "@tailwindcss/oxide-linux-x64-gnu": "^4.1.13",
    "@tailwindcss/oxide-linux-x64-musl": "^4.1.13",
    "@tailwindcss/oxide-linux-arm64-gnu": "^4.1.13",
    "@tailwindcss/oxide-linux-arm64-musl": "^4.1.13",
    "lightningcss-linux-x64-gnu": "^1.30.1",
    "lightningcss-linux-x64-musl": "^1.30.1",
    "lightningcss-linux-arm64-gnu": "^1.30.1",
    "lightningcss-linux-arm64-musl": "^1.30.1"
  }
}
